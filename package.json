{
  "name": "walletconnect-monorepo",
  "description": "Monorepo for WalletConnect",
  "private": true,
  "keywords": [
    "wallet",
    "walletconnect",
    "ethereum",
    "jsonrpc",
    "mobile",
    "qrcode",
    "web3",
    "crypto",
    "cryptocurrency",
    "dapp"
  ],
  "author": "WalletConnect Labs <walletconnectlabs.com>",
  "homepage": "https://github.com/walletconnect-labs/walletconnect-v2-monorepo/",
  "license": "LGPL-3.0",
  "scripts": {
    "ls": "lerna ls",
    "bootstrap": "npm install && run-s bootstrap:monorepo",
    "bootstrap:monorepo": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "eslint -c './.eslintrc' --fix 'packages/*/**/*.ts'",
    "clean": "rm -rf dist && lerna run clean",
    "clean:node_modules": "lerna exec -- rm -rf node_modules",
    "clean:example": "echo \"clean:example not implemented\"",
    "clean:all": "run-s clean clean:node_modules clean:example",
    "new-version": "lerna version --no-git-tag-version",
    "publish:latest": "lerna exec -- npm publish --access public",
    "publish:next": "lerna exec -- npm publish --access public --tag next",
    "health-check": "echo \"health-check not implemented\"",
    "move-dist": "echo \"move-dist not implemented\"",
    "commit-version": "echo \"commit-version not implemented\"",
    "check": "run-s clean lint build test move-dist",
    "reset": "run-s clean:all bootstrap check",
    "start": "echo \"start not implemented\"",
    "example": "run-s check start",
    "deploy": "run-s check publish",
    "pre-publish": "run-s new-version reset commit-version",
    "deploy:latest": "run-s pre-publish publish:latest",
    "deploy:next": "run-s pre-publish publish:next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletconnect-labs/walletconnect-v2-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/walletconnect-labs/walletconnect-v2-monorepo/issues"
  },
  "devDependencies": {
    "lerna": "3.20.2"
  }
}
