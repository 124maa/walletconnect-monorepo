{
  "name": "@walletconnect/core",
  "description": "Core for WalletConnect Protocol",
  "version": "2.0.0-beta.101",
  "author": "WalletConnect, Inc. <walletconnect.com>",
  "homepage": "https://github.com/walletconnect/walletconnect-monorepo/",
